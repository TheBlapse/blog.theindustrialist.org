---
const { title, url, description, pubDate, author, image, tags } = Astro.props;
---

<li>
  <a href={url} title={title} class="group">
    <article class="flex h-full flex-1 flex-col">
      <div class="block w-full lg:col-span-2 lg:pb-3">
        <img
          class="aspect-[4/3] h-full w-full bg-center object-cover"
          src={image}
          alt={title}
        />
      </div>
      <div
        class="flex h-full w-full flex-1 flex-col items-start justify-between gap-x-4 py-1.5"
      >
        <div>
          <h4
            class="w-full text-wrap font-display text-xl font-semibold text-black lg:text-3xl"
          >
            {title}
          </h4>
          <p class="mt-3 font-sans text-sm text-zinc-800">{description}</p>

          <div class="inline-flex items-center space-x-1">
            <!-- <p class="text-xs text-black">{author}</p> -->
            <!-- <span aria-hidden="true">&middot;</span> -->
            <div class="flex font-sans text-xs text-zinc-500">
              <time datetime="2020-03-16">{pubDate}</time>
            </div>
          </div>
        </div>

        <!-- <div class="mt-4 flex space-x-2">
          {
            tags.map((tag) => (
              <span class="text-xs font-medium text-black">{tag}</span>
            ))
          }
        </div> -->
      </div>
    </article>
  </a>
</li>
